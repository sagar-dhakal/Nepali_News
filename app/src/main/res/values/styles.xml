<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">#FF0000</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Theme.Light" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/light_primary_color_dark</item>
        <item name="colorPrimaryDark">@color/light_primary_color_dark</item>
        <item name="colorAccent">@color/light_accent_color</item>
        <item name="colorReadState">@color/read_state</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/list_activated_background_light
        </item>
    </style>

    <style name="Theme.Slidr.Light" parent="Theme.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
